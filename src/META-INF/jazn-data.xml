<?xml version = '1.0' encoding = 'UTF-8' standalone = 'yes'?>
<jazn-data xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="http://xmlns.oracle.com/oracleas/schema/jazn-data.xsd">
    <jazn-realm default="jazn.com">
        <realm>
            <name>jazn.com</name>
            <roles>
                <role>
                    <name>ENT_ROLE</name>
                    <display-name>Enterprise Role</display-name>
                </role>
            </roles>
        </realm>
    </jazn-realm>
    <policy-store>
        <applications>
            <application>
                <name>ErrorCodeDemo2</name>
                <app-roles>
                    <app-role>
                        <name>APP_ROLE</name>
                        <class>oracle.security.jps.service.policystore.ApplicationRole</class>
                        <display-name>Application Role</display-name>
                        <members>
                            <member>
                                <class>oracle.security.jps.internal.core.principals.JpsXmlEnterpriseRoleImpl</class>
                                <name>ENT_ROLE</name>
                            </member>
                        </members>
                    </app-role>
                </app-roles>
                <jazn-policy>
                    <grant>
                        <grantee>
                            <principals>
                                <principal>
                                    <class>oracle.security.jps.internal.core.principals.JpsAuthenticatedRoleImpl</class>
                                    <name>authenticated-role</name>
                                </principal>
                            </principals>
                        </grantee>
                        <permissions>
                            <permission>
                                <class>oracle.adf.share.security.authorization.RegionPermission</class>
                                <name>blog.anirbanm.errcode.view.pageDefs.homePageDef</name>
                                <actions>view</actions>
                            </permission>
                            <permission>
                                <class>oracle.adf.controller.security.TaskFlowPermission</class>
                                <name>/WEB-INF/flows/auth-check.xml#auth-check</name>
                                <actions>view</actions>
                            </permission>
                        </permissions>
                    </grant>
                    <grant>
                        <grantee>
                            <principals>
                                <principal>
                                    <class>oracle.security.jps.service.policystore.ApplicationRole</class>
                                    <name>APP_ROLE</name>
                                </principal>
                            </principals>
                        </grantee>
                        <permissions>
                            <permission>
                                <class>oracle.adf.controller.security.TaskFlowPermission</class>
                                <name>/WEB-INF/flows/main-def.xml#main-def</name>
                                <actions>view</actions>
                            </permission>
                        </permissions>
                    </grant>
                </jazn-policy>
            </application>
        </applications>
    </policy-store>
    <system-policy/>
</jazn-data>
